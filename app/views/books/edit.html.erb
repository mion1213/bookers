<h1>Edit Book</h1>

<div class="error-message">
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book do |f| %>

  <div class="field">
    <div class="book-title">BookTitle</div>
    <div class="book-title-field"><%= f.text_field :title %></div>
  </div>
  
  <div class="field">
    <div class="comment">Comment</div>
    <div class="comment-area"><%= f.text_area :body %></div>
  </div>
  
  <div class="submit"><%= f.submit 'Update Book' %></div>
  <span><%= link_to "Show", book_path(@book.id) %></span>
  <sapn>|</sapn>
  <span><%= link_to "Back", books_path %></span>
<% end %>